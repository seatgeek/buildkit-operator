metadata:
  annotations:
    container.apparmor.security.beta.kubernetes.io/buildkit: unconfined
    example.com/custom: value
    template.example.com/config: enabled
  creationTimestamp: null
  generateName: test-buildkit-
  labels:
    app.kubernetes.io/component: builder
    app.kubernetes.io/name: template-buildkit
    app.kubernetes.io/version: v1.0.0
  namespace: test-ns
spec:
  activeDeadlineSeconds: 222
  affinity:
    podAntiAffinity:
      requiredDuringSchedulingIgnoredDuringExecution:
      - labelSelector:
          matchLabels:
            app.kubernetes.io/name: custom-buildkit
        topologyKey: kubernetes.io/hostname
  containers:
  - args:
    - --addr
    - unix:///run/user/1000/buildkit/buildkitd.sock
    - --addr
    - tcp://0.0.0.0:4567
    - --oci-worker-no-process-sandbox
    - --debug
    command:
    - rootlesskit
    - buildkitd
    env:
    - name: HOST_IP
      valueFrom:
        fieldRef:
          apiVersion: v1
          fieldPath: status.hostIP
    - name: OTEL_EXPORTER_OTLP_ENDPOINT
      value: http://$(HOST_IP):4317
    - name: OTEL_SERVICE_NAME
      value: custom-buildkit-service
    - name: OTEL_RESOURCE_ATTRIBUTES
      value: service.name=custom-buildkit-service,deployment.environment=ci
    image: moby/buildkit:latest
    imagePullPolicy: IfNotPresent
    lifecycle:
      preStop:
        exec:
          command:
          - /bin/sh
          - /usr/local/bin/buildkit-prestop.sh
    livenessProbe:
      failureThreshold: 6
      grpc:
        port: 4567
        service: null
      initialDelaySeconds: 5
      periodSeconds: 30
      timeoutSeconds: 3
    name: buildkit
    ports:
    - containerPort: 4567
      name: tcp
      protocol: TCP
    readinessProbe:
      failureThreshold: 2
      grpc:
        port: 4567
        service: null
      initialDelaySeconds: 5
      periodSeconds: 15
    resources:
      limits:
        cpu: 500m
        memory: 512Mi
      requests:
        cpu: 200m
        memory: 256Mi
    securityContext:
      runAsGroup: 1000
      runAsUser: 1000
      seccompProfile:
        type: Unconfined
    volumeMounts:
    - mountPath: /home/user/.local/share/buildkit
      name: buildkitd
    - mountPath: /home/user/.config/buildkit
      name: config
    - mountPath: /usr/local/bin/buildkit-prestop.sh
      name: scripts
      subPath: buildkit-prestop.sh
  nodeSelector:
    kubernetes.io/arch: amd64
  priorityClassName: test-pc
  restartPolicy: OnFailure
  serviceAccountName: test-sa
  terminationGracePeriodSeconds: 111
  tolerations:
  - effect: NoSchedule
    key: node-role.kubernetes.io/master
    operator: Exists
  topologySpreadConstraints:
  - labelSelector:
      matchLabels:
        app.kubernetes.io/name: custom-buildkit
    maxSkew: 1
    topologyKey: kubernetes.io/hostname
    whenUnsatisfiable: DoNotSchedule
  volumes:
  - emptyDir: {}
    name: buildkitd
  - configMap:
      name: buildkit-test-template-toml
    name: config
  - configMap:
      defaultMode: 493
      name: buildkit-test-template-scripts
    name: scripts
status: {}
